<div class="custom-control custom-radio custom-control-inline">
    <input type="radio" id="@Id" name="@GroupName" class="custom-control-input" @onchange="OnChangeCallback" checked="@(Checked)">
    <label class="custom-control-label" for="@Id">@Text</label>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public bool Checked { get; set; } = false;

    [Parameter]
    public EventCallback<ChangeEventArgs> OnChangeCallback { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string GroupName { get; set; }
}